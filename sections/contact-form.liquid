<div class="flex flex-col items-center my-8">
  {% form 'contact' %}
    <label for="contact_name">Name</label>
    <input type="text" name="contact[name]" id="contact_name"></input>

    <label for="contact_email">Email address</label>
    <input type="email" name="contact[email]" id="contact_email">

    <labe for="contact_message">Message</label>
    <textarea name="contact[body]" id="contact_message" class=""></textarea>

    <input type="submit" value="Submit message">
  {% endform %}
</div>

{% schema %}
{
  "name": "Contact Form",
  "presets": [
    {
      "name": "Contact Form"
    }
  ]
}
{% endschema %}